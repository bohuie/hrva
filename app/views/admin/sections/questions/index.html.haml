= provide(:title, 'Questions Listing') 

.page-header
  %h1
    List of Questions

%table{:cellpadding=>10, :border=>1, :width=>'100%'}
  %tr
    %th
      Item 
    %th
      Type 
    %th
      Instruction
    %th
      Actions 

  - @questions.each do |question| 
    %tr
      %td
        = question.item 
      %td
        = question.qtype 
      %td
        = question.instruction 
      %td{:width=>'25%'}
        %span{:style => 'white-space: nowrap'}
          .center
            = action_links [:admin, @section, question], :exclude => [:index], :delete => {:title=>'Delete', :alt_text=>'Delete', :confirm=> 'Are you sure you want to delete this question?'}

%br

= link_to 'Create New Question', new_admin_section_question_path(@section)
